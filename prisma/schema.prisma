// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updateUt  DateTime @updatedAt
  orders    Order[]
}

model Product {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  price       Float
  img         String
}

// Определение модели для таблицы "Заказ"
model Order {
  id        Int         @id @default(autoincrement())
  createdAt DateTime    @default(now())
  total     Float
  // Связь "Многие-ко-многим" с моделью "Товар" через промежуточную таблицу "Заказ_товар"
  items     OrderItem[]
  // Связь "Многие-ко-одному" с моделью "Пользователь"
  user      User        @relation(fields: [userId], references: [id])
  userId    Int
}

// Определение модели для таблицы "Заказ_товар"
model OrderItem {
  id        Int     @id @default(autoincrement())
  quantity  Int
  // Связь "Многие-ко-одному" с моделью "Заказ"
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
}
