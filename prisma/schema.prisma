generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  password  String
  createdAt DateTime @default(now())
  email     String   @unique
  updateUt  DateTime @updatedAt
  username  String   @unique
  orders    Order[]
}

model Product {
  id                 Int               @id @default(autoincrement())
  Product_category   Product_category? @relation(fields: [product_categoryId], references: [id])
  product_categoryId Int?
  name               String
  descreption        String
  product_image      String
  product_item       product_item[]
}

model Product_category {
  id            Int         @id @default(autoincrement())
  category_name category
  variation     Variation[]
  product       Product[]
}

model Variation {
  id                 Int                @id @default(autoincrement())
  name               String
  Product_category   Product_category?  @relation(fields: [product_categoryId], references: [id])
  product_categoryId Int?
  variation_option   Variation_option[]
}

model Variation_option {
  id                    Int                     @id @default(autoincrement())
  value                 String
  Variation             Variation?              @relation(fields: [variationId], references: [id])
  variationId           Int?
  Product_configuration Product_configuration[]
}

model Product_configuration {
  product_id       Int
  product_item     product_item     @relation(fields: [product_id], references: [id])
  variation_id     Int
  variation_option Variation_option @relation(fields: [variation_id], references: [id])

  @@id([product_id, variation_id])
}

model product_item {
  id                    Int                     @id @default(autoincrement())
  quantity              Int                     @default(0)
  product_configuration Product_configuration[]
  product_img           String
  price                 Float
  Product               Product?                @relation(fields: [productId], references: [id])
  productId             Int?
}

model Order {
  id               Int      @id @default(autoincrement())
  userId           Int
  created_at       DateTime @default(now())
  order_date       DateTime
  shipping_address String
  status           Boolean  @default(false)
  total_amount     Float
  updated_at       DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id])
}

enum category {
  SHIRT
  SNEAKERS
  TROUSERS
  HOODIES
  HEADDRESS
}
